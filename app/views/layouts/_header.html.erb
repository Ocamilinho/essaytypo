<header class="cabecalho">
	<div class="logo-div">
		<%=image_tag("ruby.png", class: "img-logo-nav")%>
		<%= link_to 'EssayTypo', root_url, class: "logo-nav" %>
	</div>
	<div>
		<ul class="lista-nav">
			<%= link_to 'Redações', questions_path, class: "item-nav hidden-phone" %>
			<%= link_to 'Sobre', sobre_path, class: 'item-nav hidden-phone' %>

			<% if Current.user %>
				<%= button_to Current.user.email, show_user_path, method: :get,  class: 'item-nav-logout hidden-phone' %>
				<%= button_to 'Logout', logout_path, method: :delete,  class: 'item-nav-logout hidden-phone' %>
			<% else %>
				<%= link_to 'Login', log_in_path, class: 'item-nav hidden-phone' %>
				<%= link_to 'SignUp', sign_up_path, class: 'item-nav hidden-phone' %>
			<% end %>
		</ul>
		<span class="button-nav hidden-pc" onclick="handleMenu()"></span>
	</div>
</header>

<div id="menu">
        <%= link_to 'Redações', questions_path, class: "item-nav" %>
		<%= link_to 'Sobre', sobre_path, class: 'item-nav' %>

		<% if Current.user %>
				<%= button_to Current.user.email, show_user_path, method: :get,  class: 'item-nav-logout' %>
				<%= button_to 'Logout', logout_path, method: :delete,  class: 'item-nav-logout' %>
			<% else %>
				<%= link_to 'Login', log_in_path, class: 'item-nav' %>
				<%= link_to 'SignUp', sign_up_path, class: 'item-nav' %>
			<% end %>
</div>